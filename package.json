{
  "name": "pkuphysu-website",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,scss,json,md}": [
      "prettier --write"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "scripts": {
    "dev": "vite --host",
    "build": "vite build",
    "preview": "vite preview --host",
    "lint": "eslint . --ext .js,.vue,.svelte",
    "lint:fix": "eslint . --ext .js,.vue,.svelte --fix",
    "prepare": "husky install"
  },
  "dependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@element-plus/icons-vue": "^2.3.2",
    "@iconify-json/ep": "^1.2.3",
    "@iconify-json/ri": "^1.2.5",
    "@mdit/plugin-img-lazyload": "^0.22.1",
    "@mdit/plugin-img-size": "^0.22.3",
    "@mdit/plugin-ins": "^0.22.1",
    "@mdit/plugin-katex": "^0.23.2",
    "@mdit/plugin-mark": "^0.22.1",
    "@mdit/plugin-tasklist": "^0.22.2",
    "@vueuse/core": "^13.9.0",
    "dayjs": "^1.11.18",
    "dompurify": "^3.3.0",
    "element-plus": "^2.11.4",
    "husky": "^9.1.7",
    "katex": "^0.16.25",
    "lint-staged": "^16.2.7",
    "markdown-it": "^14.1.0",
    "markdown-it-emoji": "^3.0.0",
    "markdown-it-ins": "^4.0.0",
    "markdown-it-mark": "^4.0.0",
    "marked": "^17.0.0",
    "pinia": "^3.0.3",
    "prettier": "^3.6.2",
    "unplugin-icons": "^22.3.0",
    "vditor": "^3.11.2",
    "vue": "^3.5.21",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@vitejs/plugin-vue": "^6.0.1",
    "eslint": "^9.39.1",
    "eslint-plugin-vue": "^10.6.0",
    "globals": "^16.5.0",
    "sass-embedded": "^1.93.1",
    "unplugin-auto-import": "^20.2.0",
    "unplugin-vue-components": "^29.1.0",
    "vite": "^7.1.7"
  }
